@model List<Restraurant.Models.Dish>
@{
    ViewData["Title"] = "Menu";
}

<div class="container">
    <div class="">
        @foreach(var dish in Model)
        {
           <div class="col-6">
               <div class="d-flex justify-content-center">
                   <h4>@dish.Name</h4>
               </div>
               <div class="d-flex justify-content-center">
                 <img src="@dish.ImageUrl" width="200" height="200"/>
               </div>
                <div class="d-flex justify-content-center">
                    $@dish.Price.ToString("N2")
                </div>
                <div class="d-flex justify-content-center">
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@dish.Id">View Details</a>
                </div>
           </div>
        }
    </div>
</div>